// this file compiles the Angular part
{
  "compileOnSave": false,
  "compilerOptions": {
     /* Basic Options */
     "module": "es2020",
     "incremental": true,
     //"tsBuildInfoFile": "./",
     "target": "es5",
     "moduleResolution": "node",
     "lib": [
       "es2018",
       "es2017",
       "es2016",
       "es2015",
       "dom"
     ],
     "declaration": false,
     "sourceMap": true,
     "outDir": "./dist/out-tsc",
     "importHelpers": true,
     //"noEmitOnError": true,
 
     /* Strict Type-Checking Options */
     "strict": true,
     "alwaysStrict": true,
     "strictNullChecks": true,
     "noImplicitAny": true,
     "noImplicitThis": true,
     
     /* Additional Checks */
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true,
     "noFallthroughCasesInSwitch": true,
 
     /* Module Resolution Options */
     "typeRoots": [
       "node_modules/@types"
     ],
     "esModuleInterop": true,
     "allowSyntheticDefaultImports": true,
 
     /* Experimental Options */
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true
   },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
