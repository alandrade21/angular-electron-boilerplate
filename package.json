{
  "name": "@alandrade21/angular-electron-alandrade21",
  "version": "1.0.0",
  "description": "Angular 7 with Electron (Typescript + SASS + Hot Reload) and sqlite and typeorm",
  "homepage": "https://github.com/alandrade21/angular-electron-boilerplate",
  "license": "AGPL-3.0",
  "author": "Andr√© Andrade <alandrade21@gmail.com> (https://github.com/alandrade21)",
  "main": "electron/dist/main.js",
  "private": true,
  "repository": {
    "type" : "git",
    "url" : "https://github.com/alandrade21/angular-electron-boilerplate.git"
  },
  "keywords": [
    "angular",
    "angular 7",
    "electron",
    "typescript",
    "sass",
    "sqlite",
    "typeorm",
    "boilerplate"
  ],
  "scripts": {
    "postinstall": "npm run postinstall:electron && electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "start:local": "npm run postinstall:electron && npm-run-all ng:build:dev electron:build-tsc electron:local",
    "build": "npm run postinstall:electron && ng:build:dev && electron:build-tsc",
    "build:prod": "npm run postinstall:electron && ng:build:prod && electron:build-tsc",
    "ng:build:dev": "ng build --base-href ./ -c dev",
    "ng:build:prod": "ng build --base-href ./ -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng:serve -o",
    "electron:build-tsc": "tsc --p electron",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:build-tsc && ELECTRON_ENV=dev electron . --serve",
    "electron:local": "ELECTRON_ENV=dev electron .",
    "electron:linux": "npm run postinstall:electron && ng:build:prod && electron:build-tsc && electron-builder build --linux",
    "electron:windows": "npm run postinstall:electron && ng:build:prod && electron:build-tsc && electron-builder build --windows",
    "electron:mac": "npm run postinstall:electron && build:prod && electron:build-tsc && electron-builder build --mac",
    "test": "npm run postinstall:web && ng test",
    "e2e": "npm run postinstall:web && ng e2e",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.0.6",
    "typeorm": "^0.2.11"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.12.1",
    "@angular/animations": "~7.2.0",
    "@angular/cli": "~7.2.1",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@ngx-translate/core": "11.0.1",
    "@ngx-translate/http-loader": "4.0.0",
    "@types/jasmine": "^2.8.7",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "^8.9.4",
    "@types/sqlite3": "^3.1.3",
    "codelyzer": "^4.5.0",
    "conventional-changelog-cli": "^2.0.11",
    "core-js": "^2.6.1",
    "electron": "4.0.1",
    "electron-builder": "~20.36.2",
    "electron-reload": "~1.3.0",
    "jasmine-core": "^3.3.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "protractor": "^5.4.1",
    "rxjs": "^6.3.3",
    "ts-node": "^7.0.1",
    "tslib": "^1.9.0",
    "tslint": "^5.11.0",
    "typescript": "~3.2.2",
    "wait-on": "^3.2.0",
    "webdriver-manager": "^12.1.0",
    "zone.js": "^0.8.26"
  }
}
